{
  "name": "@birchill/bugsnag-zero",
  "version": "0.7.3",
  "description": "A lightweight Bugsnag client",
  "repository": "https://github.com/birchill/bugsnag-zero.git",
  "author": "Birchill, Inc.",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "prepare": "husky",
    "release": "standard-version",
    "test": "vitest run",
    "lint": "oxlint"
  },
  "bugs": {
    "url": "https://github.com/birchill/bugsnag-zero/issues"
  },
  "files": [
    "dist/**",
    "lambda-context.*"
  ],
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "module": "./dist/esm/index.js",
      "import": "./dist/cjs/index.cjs",
      "default": "./dist/cjs/index.cjs"
    },
    "./lambda-context": {
      "types": "./dist/esm/lambda-context.d.ts",
      "module": "./dist/esm/lambda-context.js",
      "import": "./dist/cjs/lambda-context.cjs",
      "default": "./dist/cjs/lambda-context.cjs"
    }
  },
  "homepage": "https://github.com/birchill/bugsnag-zero#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "oxlint"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "12.1.4",
    "@types/aws-lambda": "8.10.152",
    "@types/node": "22.18.6",
    "@types/ua-parser-js": "0.7.39",
    "husky": "9.1.7",
    "lint-staged": "16.2.0",
    "oxlint": "1.18.0",
    "prettier": "3.6.2",
    "rollup": "4.52.2",
    "standard-version": "9.5.0",
    "tslib": "2.8.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "vitest-github-actions-reporter": "0.11.1"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
