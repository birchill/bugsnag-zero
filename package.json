{
  "name": "@birchill/bugsnag-zero",
  "version": "0.6.3",
  "description": "A lightweight Bugsnag client",
  "repository": "https://github.com/birchill/bugsnag-zero.git",
  "author": "Birchill, Inc.",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "pinst --disable && rollup -c",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "release": "standard-version",
    "test": "vitest run"
  },
  "bugs": {
    "url": "https://github.com/birchill/bugsnag-zero/issues"
  },
  "files": [
    "dist/**",
    "lambda-context.*"
  ],
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "module": "./dist/esm/index.js",
      "import": "./dist/cjs/index.cjs",
      "default": "./dist/cjs/index.cjs"
    },
    "./lambda-context": {
      "types": "./dist/esm/lambda-context.d.ts",
      "module": "./dist/esm/lambda-context.js",
      "import": "./dist/cjs/lambda-context.cjs",
      "default": "./dist/cjs/lambda-context.cjs"
    }
  },
  "homepage": "https://github.com/birchill/bugsnag-zero#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "11.1.2",
    "@types/aws-lambda": "8.10.119",
    "@types/node": "18.17.8",
    "@types/ua-parser-js": "0.7.36",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "pinst": "3.0.0",
    "prettier": "3.0.2",
    "rollup": "3.28.1",
    "standard-version": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "5.1.6",
    "vitest": "0.34.2",
    "vitest-github-actions-reporter": "0.10.0"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "ua-parser-js": "^1.0.32"
  }
}
