{
  "name": "bugsnag-zero-monorepo",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "release": "pnpm -r build && pnpm changeset publish",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "oxlint",
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/aws-lambda": "8.10.160",
    "@types/node": "22.19.11",
    "@types/ua-parser-js": "0.7.39",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxlint": "1.47.0",
    "prettier": "3.8.1",
    "tsdown": "0.19.0",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
