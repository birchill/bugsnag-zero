{
  "name": "@birchill/bugsnag-zero",
  "version": "0.7.1",
  "description": "A lightweight Bugsnag client",
  "repository": "https://github.com/birchill/bugsnag-zero.git",
  "author": "Birchill, Inc.",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "prepare": "husky",
    "release": "standard-version",
    "test": "vitest run",
    "lint": "oxlint"
  },
  "bugs": {
    "url": "https://github.com/birchill/bugsnag-zero/issues"
  },
  "files": [
    "dist/**",
    "lambda-context.*"
  ],
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "module": "./dist/esm/index.js",
      "import": "./dist/cjs/index.cjs",
      "default": "./dist/cjs/index.cjs"
    },
    "./lambda-context": {
      "types": "./dist/esm/lambda-context.d.ts",
      "module": "./dist/esm/lambda-context.js",
      "import": "./dist/cjs/lambda-context.cjs",
      "default": "./dist/cjs/lambda-context.cjs"
    }
  },
  "homepage": "https://github.com/birchill/bugsnag-zero#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "oxlint"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "12.1.2",
    "@types/aws-lambda": "8.10.148",
    "@types/node": "22.13.14",
    "@types/ua-parser-js": "0.7.39",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "oxlint": "0.16.4",
    "prettier": "3.5.3",
    "rollup": "4.39.0",
    "standard-version": "9.5.0",
    "tslib": "2.8.1",
    "typescript": "5.8.2",
    "vitest": "3.1.1",
    "vitest-github-actions-reporter": "0.11.1"
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6"
}
