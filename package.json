{
  "name": "@birchill/bugsnag-zero",
  "version": "0.7.2",
  "description": "A lightweight Bugsnag client",
  "repository": "https://github.com/birchill/bugsnag-zero.git",
  "author": "Birchill, Inc.",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "prepare": "husky",
    "release": "standard-version",
    "test": "vitest run",
    "lint": "oxlint"
  },
  "bugs": {
    "url": "https://github.com/birchill/bugsnag-zero/issues"
  },
  "files": [
    "dist/**",
    "lambda-context.*"
  ],
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "module": "./dist/esm/index.js",
      "import": "./dist/cjs/index.cjs",
      "default": "./dist/cjs/index.cjs"
    },
    "./lambda-context": {
      "types": "./dist/esm/lambda-context.d.ts",
      "module": "./dist/esm/lambda-context.js",
      "import": "./dist/cjs/lambda-context.cjs",
      "default": "./dist/cjs/lambda-context.cjs"
    }
  },
  "homepage": "https://github.com/birchill/bugsnag-zero#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "oxlint"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "12.1.3",
    "@types/aws-lambda": "8.10.150",
    "@types/node": "22.15.32",
    "@types/ua-parser-js": "0.7.39",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "oxlint": "1.2.0",
    "prettier": "3.5.3",
    "rollup": "4.44.0",
    "standard-version": "9.5.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "vitest": "3.2.4",
    "vitest-github-actions-reporter": "0.11.1"
  },
  "packageManager": "pnpm@10.12.2+sha512.a32540185b964ee30bb4e979e405adc6af59226b438ee4cc19f9e8773667a66d302f5bfee60a39d3cac69e35e4b96e708a71dd002b7e9359c4112a1722ac323f"
}
